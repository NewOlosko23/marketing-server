# ===========================================
# MARKETING FIRM BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control!

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority&appName=Cluster0

# Alternative MongoDB Configuration (if not using connection string)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=marketing_firm
MONGO_USERNAME=your_mongo_username
MONGO_PASSWORD=your_mongo_password

# ===========================================
# JWT CONFIGURATION
# ===========================================
# JWT Secret Key (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRE=30d

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:3001
FRONTEND_DOMAIN=localhost:3001

# ===========================================
# EMAIL SERVICE CONFIGURATION
# ===========================================
# Primary Email Service (Mailjet)
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_API_SECRET=your_mailjet_api_secret_here

# Email Configuration
FROM_EMAIL=your-email@example.com
FROM_NAME=Marketing Firm
REPLY_TO_EMAIL=support@yourcompany.com

# SMTP Configuration (Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_email@gmail.com
SMTP_PASS=your_smtp_app_password

# ===========================================
# SMS SERVICE CONFIGURATION
# ===========================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# SMS Configuration
SMS_FROM_NUMBER=+1234567890
SMS_WEBHOOK_URL=http://localhost:5000/api/sms/webhook/delivery

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=xlsx,xls,csv
UPLOAD_PATH=uploads

# ===========================================
# QUOTA CONFIGURATION
# ===========================================
# Plan Limits
FREE_PLAN_EMAIL_LIMIT=2000
FREE_PLAN_SMS_LIMIT=0
FREE_PLAN_API_LIMIT=10000

STARTER_PLAN_EMAIL_LIMIT=5000
STARTER_PLAN_SMS_LIMIT=1000
STARTER_PLAN_API_LIMIT=50000

PROFESSIONAL_PLAN_EMAIL_LIMIT=25000
PROFESSIONAL_PLAN_SMS_LIMIT=5000
PROFESSIONAL_PLAN_API_LIMIT=200000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# ===========================================
# EXTERNAL API CONFIGURATION
# ===========================================
# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Debug Mode
DEBUG=true
VERBOSE_LOGGING=true

# Test Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/marketing_firm_test
TEST_EMAIL=test@example.com

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
# Webhook URLs
EMAIL_WEBHOOK_URL=https://yourdomain.com/api/webhooks/email
SMS_WEBHOOK_URL=https://yourdomain.com/api/webhooks/sms
PAYMENT_WEBHOOK_URL=https://yourdomain.com/api/webhooks/payment

# Webhook Secrets
EMAIL_WEBHOOK_SECRET=your_email_webhook_secret
SMS_WEBHOOK_SECRET=your_sms_webhook_secret
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret
